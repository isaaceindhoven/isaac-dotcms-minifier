<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">

	<formats>
		<format>zip</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<directory>${basedir}/../isaac-dotcms-minifier-core/target/</directory>
			<includes>
				<include>isaac-dotcms-minifier-core-5.3.8.6-1.jar</include>
			</includes>
			<outputDirectory>${artifactId}/lib/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/java/</directory>
			<outputDirectory>${artifactId}/src/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/resources/</directory>
			<outputDirectory>${artifactId}/</outputDirectory>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/lib</directory>
			<outputDirectory>${artifactId}/lib</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
